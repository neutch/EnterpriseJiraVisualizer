FROM node:18-alpine

WORKDIR /app

# Install global dependencies
RUN npm install -g typescript@5.3.3

# Copy package files
COPY client/package*.json ./client/
COPY src/package*.json ./src/ 2>/dev/null || echo "No src package.json"

# Install dependencies
WORKDIR /app/client
RUN npm install

# Copy source code
COPY client/ ./
COPY src/ ../src/

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]