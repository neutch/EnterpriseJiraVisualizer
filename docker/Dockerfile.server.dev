FROM node:18-alpine

WORKDIR /app

# Install global dependencies
RUN npm install -g typescript@5.3.3 ts-node@10.9.2 nodemon@3.0.2

# Copy package files
COPY server/package*.json ./server/
COPY src/package*.json ./src/ 2>/dev/null || echo "No src package.json"

# Install dependencies
WORKDIR /app/server
RUN npm install

# Copy source code
COPY server/ ./
COPY src/ ../src/

# Expose port
EXPOSE 4000

# Start development server
CMD ["npm", "run", "dev"]